<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
      tools:context="com.bway.two.view.activity.ZhangHaoLoginActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_browser_nav_back"
        android:id="@+id/zhanghao_fh"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登录"
        android:layout_gravity="center"
        android:layout_marginLeft="110dp"
        android:textSize="25dp"
        android:padding="5dp"
        />
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
android:orientation="horizontal"
    >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/shouji"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
        android:layout_marginLeft="5dp"
            android:maxLength="11"
            android:hint="请输入手机号"
            android:id="@+id/zhanghao_phone"
            android:textColorHint="#999999"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/mima"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:id="@+id/zhanghao_pwd"
            android:textColorHint="#999999"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/keji"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="35dp"
        android:text="登录"
        android:textColor="#ea2222"
        android:id="@+id/zhanghao_login"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:textColor="#999999"
        android:layout_marginTop="15dp"
        android:layout_gravity="right"
        android:id="@+id/zhanghao_wangjipwd"
        android:layout_marginRight="15dp"
        />
</LinearLayout>
