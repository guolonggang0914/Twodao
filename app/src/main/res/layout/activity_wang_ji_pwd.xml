<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F4F5"
    tools:context="com.bway.two.view.activity.WangJiPwdActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x25"
        android:id="@+id/wangji_fh"
        android:src="@drawable/ic_browser_nav_back"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="@dimen/x40"
        android:padding="8dp"
        android:layout_marginLeft="@dimen/x170"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x42"
            android:src="@drawable/shouji"
            />
        <EditText
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/x130"
            android:hint="请输入手机号"
            android:background="#ffffff"
            android:textSize="@dimen/x40"
            android:padding="8dp"
            android:id="@+id/wangji_phone"
            android:textColorHint="#999999"
            android:layout_marginLeft="@dimen/x70"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x42"
            android:src="@drawable/yanzhengma"
            />
        <EditText
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/x130"
            android:hint="请输入验证码"
            android:background="#ffffff"
            android:textSize="@dimen/x40"
            android:padding="8dp"
            android:id="@+id/wangji_code"
            android:textColorHint="#999999"
            android:layout_marginLeft="@dimen/x70"
            />
        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x88"
            android:text="获取验证码"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/wangji_huoqu"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x42"
            android:src="@drawable/mima"
            />
        <EditText
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/x130"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:background="#ffffff"
            android:textSize="@dimen/x40"
            android:padding="8dp"
            android:textColorHint="#999999"
            android:id="@+id/wangji_xin_pwd"
            android:layout_marginLeft="@dimen/x70"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/keji"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginLeft="@dimen/x90"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x42"
            android:src="@drawable/mima"
            />
        <EditText
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/x130"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:background="#ffffff"
            android:textSize="@dimen/x40"
            android:padding="8dp"
            android:id="@+id/wangji_que_pwd"
            android:textColorHint="#999999"
            android:layout_marginLeft="@dimen/x70"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x70"
        android:text="重置密码"
        android:textSize="@dimen/x35"
        android:textColor="#ea2222"
        android:id="@+id/wangji_congzhi"
        />
</LinearLayout>
