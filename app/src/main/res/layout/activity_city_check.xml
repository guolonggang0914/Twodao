<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F5"
    android:orientation="vertical"
    tools:context="com.bway.two.view.activity.CityCheckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x87"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_city_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x38"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x31"
            android:src="@drawable/xiaoxi" />

        <TextView
            android:layout_width="@dimen/x142"
            android:layout_height="@dimen/x34"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x254"
            android:layout_marginRight="@dimen/x303"
            android:text="切换城市"
            android:textColor="#333333"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/citycheck">

        <ImageView
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/x25"
            android:layout_marginBottom="@dimen/x12"
            android:layout_marginLeft="@dimen/x239"
            android:layout_marginTop="@dimen/x14"
            android:src="@mipmap/ic_home_nav_search_normal" />

        <EditText
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/x24"
            android:layout_marginBottom="@dimen/x13"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x264"
            android:layout_marginTop="@dimen/x14"
            android:hint="输入城市名称"
            android:background="@null"
            android:textColor="#999999"
            android:textSize="@dimen/x20" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/x18"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="当前位置：北京"
        android:textColor="#333333"
        android:textSize="@dimen/x28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x64"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_gravity="center"
            android:text="热门城市"
            android:textColor="#999999"
            android:textSize="@dimen/x28" />

        <TextView
            android:layout_width="@dimen/x530"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x50"
            android:textColor="#dddddd" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rela1">

                <se.emilsjolander.stickylistheaders.StickyListHeadersListView
                    android:id="@+id/slv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                </se.emilsjolander.stickylistheaders.StickyListHeadersListView>

                <TextView
                    android:id="@+id/txt_letter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="#999999"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
        <com.bway.two.utils.ImageShowUtils.SlideBar
            android:id="@+id/sb_right"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </LinearLayout>


</LinearLayout>
