<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_nearby"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/colorWhite"
        app:tabBackground="@drawable/tablayout_selector"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/colorRed"
        app:tabTextColor="#333333"></android.support.design.widget.TabLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ralat_biaoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.baidu.mapapi.map.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </com.baidu.mapapi.map.MapView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x160"
                >
                <TextView
                    android:id="@+id/txt_nearby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="肯德基（安贞桥东餐厅店）"
                    android:textSize="@dimen/x28"
                    android:textColor="#333333"
                    />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_nearby_name"
                android:text="胜古南里甲43号"
                android:layout_marginTop="@dimen/x30"
                android:textSize="@dimen/x24"
                android:textColor="#666666"
                android:layout_alignLeft="@+id/txt_nearby_name"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="560m"
                    android:textSize="@dimen/x24"
                    android:textColor="#666666"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#666666"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:gravity="center"
                android:text="查看路线及周边"
                android:textSize="@dimen/x24"
                android:textColor="#666666"
                />

        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_nearby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</LinearLayout>
