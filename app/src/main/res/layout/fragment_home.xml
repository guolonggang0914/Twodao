<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x89"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_home_cityselector"
            android:layout_width="@dimen/x106"
            android:layout_height="@dimen/x38"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_city"
            android:drawableRight="@drawable/xiala"
            android:gravity="center_vertical"
            android:text="北京"
            android:textColor="#333333"
            android:textSize="@dimen/x28" />

        <LinearLayout
            android:id="@+id/fragment_home_search"
            android:layout_width="@dimen/x366"
            android:layout_height="@dimen/x42"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x57"
            android:background="@drawable/home_search"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/x26"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:src="@mipmap/ic_home_nav_search_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x31"
                android:gravity="center_vertical"
                android:text="麻辣小龙虾"
                android:textColor="#999999"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_home_xiaoxi"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40"
            android:background="@drawable/home_yuan"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/xiaoxi" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_home_saosao"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/home_yuan"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/saosao" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>