<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    tools:context="com.bway.two.view.activity.AnQuanActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_browser_nav_back"
        android:id="@+id/anquan_fh"
        android:layout_marginTop="@dimen/x15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全设置"
        android:textSize="@dimen/x40"
        android:layout_marginLeft="@dimen/x220"
        android:padding="@dimen/x20"
        />
</LinearLayout>
<TextView
    android:layout_marginTop="@dimen/x20"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x130"
    android:text="   重制登陆密码                                                          >"
    android:background="#ffffff"
    android:textSize="@dimen/x28"
    android:gravity="center_vertical"
    android:textColor="#333333"
    android:id="@+id/anquan_login_pwd"
    />
    <TextView
    android:layout_marginTop="@dimen/x2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x130"
    android:text="   重置支付密码                                                          >"
    android:background="#ffffff"
    android:textSize="@dimen/x28"
    android:gravity="center_vertical"
    android:textColor="#333333"
    android:id="@+id/anquan_zf_pwd"
    />
    <TextView
        android:layout_marginTop="@dimen/x2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:text="   重置手势密码                                                          >"
        android:background="#ffffff"
        android:textSize="@dimen/x28"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:id="@+id/anquan_ss_pwd"
        />
    <TextView
        android:layout_marginTop="@dimen/x2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:text="   更换手机号                                                             >"
        android:background="#ffffff"
        android:textSize="@dimen/x28"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:id="@+id/anquan_number_pwd"
        />
    <Button
        android:layout_marginTop="@dimen/x220"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_centerVertical="true"
    android:text="退出登陆"
    android:id="@+id/tuichu"
    />
</LinearLayout>
