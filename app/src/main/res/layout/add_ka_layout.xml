<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_browser_nav_back"
            android:id="@+id/ka_add_fh"
            android:layout_marginTop="@dimen/x15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加银行卡"
            android:textSize="@dimen/x40"
            android:layout_marginLeft="@dimen/x240"
            android:padding="@dimen/x20"
            />
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请绑定持卡人本人的银行卡"
    android:textColor="#999999"
    android:textSize="@dimen/x22"
    android:layout_marginTop="@dimen/x29"
    android:layout_marginLeft="@dimen/x30"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x10"
        android:text="持卡人"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡号"
          android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/x30"
            />
        <EditText
            android:layout_width="@dimen/x500"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:hint="请输入卡号"
            android:id="@+id/add_ka_kh"
            android:textColorHint="#9999"
            android:paddingStart="@dimen/x20"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tianjiabangzhu"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户银行"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/x30"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:hint="招商银行"
            android:textColorHint="#9999"
            android:id="@+id/add_ka_name"
            android:paddingStart="@dimen/x20"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户城市"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/x30"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:hint="北京"
            android:textColorHint="#9999"
            android:id="@+id/add_ka_dz"
            android:paddingStart="@dimen/x20"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/x2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/x30"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:hint="上地支行"
            android:textColorHint="#9999"
            android:id="@+id/add_ka_hang"
            android:paddingStart="@dimen/x20"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
android:layout_marginTop="@dimen/x70"
        android:text="确定"
        android:background="#ffffff"
        android:id="@+id/add_ka_qd"
        />
</LinearLayout>
