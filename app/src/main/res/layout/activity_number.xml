<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/number_fh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="返回"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/dunxin"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/shouji" />
        <EditText
            android:layout_marginLeft="17dp"
            android:maxLength="11"
            android:layout_width="235dp"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:hint="请输入手机号"
            android:textColorHint="#999999"
            android:id="@+id/number_phone"
            />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#999999"
    android:background="#ffffff"
    android:text="获取验证码"
    android:layout_marginLeft="9dp"
    android:id="@+id/number_huoqu"
    android:textSize="12dp"
    />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/yanzhengma"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_marginLeft="16dp"
            android:layout_height="44dp"
            android:textColorHint="#999999"
            android:hint="请输入验证码"
            android:id="@+id/number_yanzheng"
            android:background="#ffffff"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_shixiang"
        android:textColor="#999999"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:layout_width="360.5dp"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:text="登录"
        android:gravity="center"
        android:id="@+id/number_login"
        android:textColor="#e22222"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="其它方式登录"
    android:textColor="#9999"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="210dp"
    android:id="@+id/number_qita"
    />
</LinearLayout>
