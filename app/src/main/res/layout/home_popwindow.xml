<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x280"
    android:layout_height="@dimen/x212"
    android:paddingRight="@dimen/x10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_pop_sao"
        android:background="#fff"
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x106"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="@drawable/saoyisaoo" />

        <TextView
            android:text="扫一扫"
            android:textSize="@dimen/x36"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#544f4f"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />
    <LinearLayout
        android:id="@+id/home_pop_pay"
        android:background="#fff"
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x106"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="@drawable/fukuanma" />

        <TextView
            android:text="付款码"
            android:textSize="@dimen/x36"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>