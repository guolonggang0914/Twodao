<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x200"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/x34"
    android:paddingLeft="@dimen/x30"
    android:paddingRight="@dimen/x30"
    android:paddingTop="@dimen/x34"
    android:layout_marginTop="2dp"
    android:background="@color/colorWhite">

    <com.bway.two.utils.ImageShowUtils.YuanjiaoImageView
        android:layout_width="@dimen/x176"
        android:layout_height="@dimen/x134"
        android:src="@drawable/ceshi"
        zhy:borderRadius="@dimen/x10"
        zhy:type="round" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20">

        <TextView
            android:id="@+id/txt_meishi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="798咖啡"
            android:textColor="#333333"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_meishi_name"
            android:layout_marginTop="@dimen/x10"
            android:text="￥45/人"
            android:textColor="#999999"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/txt_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="积分率 15%"
            android:textColor="#333333"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/txt_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#999999"
            android:textSize="@dimen/x24" />
    </RelativeLayout>
</LinearLayout>
